        <Image HorizontalAlignment="Left" Height="129" Margin="242,34,0,0" VerticalAlignment="Top" Width="191" Source="logoBiblio.jpg" Grid.RowSpan="2"/>
        <Button x:Name="btSalir" Content="SALIR" HorizontalAlignment="Left" Margin="82,69.333,0,0" VerticalAlignment="Top" Width="75" Click="btSalir_Click" FontFamily="Times New Roman" Background="#FFE2DCB8" Grid.Row="1"/>

